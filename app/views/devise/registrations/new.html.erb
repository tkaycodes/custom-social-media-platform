        <div class="row mainrow">
         
        
          <div class="col-md-8">
            <div class="mainheading" style="width:80%">A picture is worth<br> 10 words.</div><hr id="line" style="width:80%;">
            <div class="subheader">Connect with your friends with pic10. 
            </div>
            <div class="subheader2">
              <i class="fa fa-instagram fa-3x subheader2icon"></i> Share a Picture
              <!-- <span class="vertical">
              </span> -->
              <i class="fa fa-twitter fa-3x subheader2icon"></i>  Share a status
              <!-- <span class="vertical"> 
              </span>  -->  
              <i class="fa fa-comments fa-3x subheader2icon"></i>Send and recieve Direct Messages
              <!-- <span class="vertical">
              </span> -->
            </div>
            
          </div>

            <div class="col-md-4">
                <div class="login-panel panel panel-default" style="margin-bottom:10px;margin-top:10%;">
                    <!-- <div class="panel-heading squarecorner">
                        <h3 class="panel-title">Sign Up</h3>
                    </div> -->
                    <div class="panel-body squarecorner">
                      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                        <%= devise_error_messages! %>
                            
                      <fieldset>
                          <div class="form-group">
                            <%= f.text_field :first_name, autofocus: true, class: "form-control squarecorner", placeholder: "First Name" %>
                          </div>
                        
                        <div class="form-group">
                          <%= f.text_field :last_name, autofocus: true, class: "form-control squarecorner", placeholder: "Last Name" %>
                        </div>
                        <div class="form-group">
                          <%= f.email_field :email, autofocus: true, class: "form-control squarecorner", placeholder: "Email" %>
                        </div>
                        <div class="form-group">
                          <%= f.text_field :username, autofocus: true, class: "form-control squarecorner", placeholder: "Enter your desired username" %>
                        </div>

                          <div class="form-group">
                                <% if @minimum_password_length %>
                                <em>(<%= @minimum_password_length %> characters minimum)</em>
                                 <% end %><br />
                          <%= f.password_field :password, autocomplete: "off", class: "form-control squarecorner", placeholder: "Password" %>
                          </div>

                          <div class="form-group">
                          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control squarecorner", placeholder: "Confirm Password" %>
                        </div>

                          <div class: "actions">
                            <%= f.submit "Sign Up", class: "btn btn-lg btn-success btn-block landingpagebutton squarecorner" %>
                          </div>
                      </fieldset>
                      <% end %>
                      <%= render "devise/shared/links" %>

                    </div>
                </div>
            </div>

        </div>

        <script>
        $(document).ready(function(){
          $('.subheader2icon').addClass('animated bounceInUp');
          $('#line').addClass('animated bounceInUp');

          $('.subheader2icon').hover(function(){
            $(this).toggleClass('underlineme')
          });
            // console.log($(this));
            // $(this)
        
        });
        </script>

