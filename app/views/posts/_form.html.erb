<div class="modal-dialog modal-lg" role="document">
  <div class="modal-content">
           <div class="modal-header customheader">
            <button type="button" class="close custombutton" data-dismiss="modal" aria-hidden="true">Ã—</button>
            <!-- <h5 id="myModalLabel"><%#=image_tag(@post.user.profile_picture, size: "50")%><%#=@post.user.email%></h5> -->
          </div>

          <div class="modal-body postbodycustom">
            <div class="row"> 
                <div class="col-md-12" style="padding-left:0px;padding-right:0px">
                    <%if @post.is_status?%>
                      <div id="statuspost">
                            <%=@post.body%>
                        <%if !@post.tags.empty?%>
                        <div class="col-md-12" id="imageoverlay" style="display:none">
                          <%@post.tags.each do |x|%>
                          <span style="color:white">#</span>
                          <%=link_to x.tag, tag_path(x), style:"color:white;margin-left:-3px;margin-right:3px;"%>
                          <%end%>
                        </div>
                        <%end%>
                    </div> 
                    <%else%>
                      <div class="imagediv">
                          <%=image_tag @post.body, :style=> "max-width: 100%"%>
                        <%if !@post.tags.empty?%>
                        <div class="col-md-12" id="imageoverlay" style="display:none">
                          <%@post.tags.each do |x|%>
                          <span style="color:white">#</span>
                          <%=link_to x.tag, tag_path(x), style:"color:white"%>
                          <%end%>
                        </div>  
                        <%end%>                  
                      </div>
                  <%end%>

                  </div>
                </div>
            </div>

          <div class="modal-footer">
            <div style="float:left">
            <%if !@post.user_tags.empty?%>Tagged Users:
                          <%@post.user_tags.each do |x|%>
                            @<%=link_to x.email, user_profile_path(x)%>
                          <%end%>
                        <%end%>
                      </div><br>
            <!-- if @liked is empty - that means the current post has not been liked 
            by the current user -->
            <i class="fa fa-thumbs-o-up btn" id="likebutton" 
              <%if !@liked.empty?%> style="display:none" 
              <%end%>>Like
            </i>
            <!-- in this case, show like button  -->
            <!-- if liked is not empty - hide it -->
            <!-- if @liked is empty - that means the current post has not been liked by the current user  -->
            <!-- in this case, hide the unlike button -->
            <!-- if liked is not empty - like exists, the unlike button will be shown, and give this unlike button a data-attribute with the like id -->
            <i class="fa fa-thumbs-up btn" id="unlikebutton" <%if @liked.empty?%>style="display:none"<%else%>data-likeid="<%=@liked[0].id%>"<%end%>>Unlike</i>
            <%=@post.created_at.strftime("%b %d/%y %l:%M%P")%></h5>
          </div>

  </div>
</div>




<script>
$('.postbodycustom').hover(function(){
  console.log('fdlsa');
  $('#imageoverlay').toggle();
})
</script>






