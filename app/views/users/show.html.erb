<h1><%=@user.email%></h1><br>
<%if @user.profile_picture%>
<%=image_tag(@user.profile_picture.url(:thumb), :width=>200, :height=>200, :radius=>:max) %>

<%end%>
<h5><%=link_to "Add Friend", friendships_path(friend_id: @user.id), method: :post%></h5><br>
<h5><%=link_to "Send Message", new_message_path(recipient_id: @user.id)%></h5><br>
Friend Count:<%=@user.friends.count%><hr>


<%@posts.each do |x|%>
    <div class="col-lg-4">
      <div class="panel panel-success">
        <div class="panel-heading"> Posted:<%=x.created_at%></div>
        <div class="panel-body">
          <%if x.type=="Image"%>
            <%=link_to image_tag(x.body.url, :id=>"imageindex"), post_path(x), {remote: :true, 'data-toggle': "modal", 'data-target': '#modal-window'}%>
            <%#=link_to image_tag(x.body.url, :id=>"imageindex"), post_path(x)%>
          <%else%>
            <h2>"<%=link_to x.body, post_path(x), {remote: :true, 'data-toggle': "modal", 'data-target': '#modal-window' }%>"</h2>
            <%#=link_to x.body, post_path(x)%>
          <%end%>
        </div>
        <div class="panel-footer"> <i class="fa fa-comment fa-fw"></i><%=x.comments.all.count%>
        </div>
      </div>
    </div>
<%end%>

<div id="modal-window" class="modal fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
</div>

<%=link_to "back home", root_path%>


