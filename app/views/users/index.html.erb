<div class="row">
  <div class="col-lg-12">
      <div class="panel panel-primary">
          <div class="panel-heading">
             Your Home Feed
          </div>
          <!-- .panel-heading -->
          <div class="panel-body">
            <ul class="nav nav-tabs">
                  <li class="active"><a href="#allposts" data-toggle="tab">All Posts</a>
                  </li>
                  <li><a href="#statuses" data-toggle="tab">Statuses only</a>
                  </li>
                  <li><a href="#images" data-toggle="tab">Images only</a>
                  </li>
              </ul>
              <div class="tab-content">
                  <div class="tab-pane fade in active" id="allposts">
                  <%current_user.friends.each do |x|%>
                    <%x.posts.order(created_at: :desc).each do |y|%>
                      <div class="panel panel-info">
                      <div class="panel-heading">
                        <%#=y.user.email%>
                      <%=y.created_at.strftime("%b %d %Y")%>
                      <span id="time"><%=y.created_at.strftime("%l:%M%P")%></span>
                      </div>
                      <div class="panel-body">
                        <div class="row">
                          <div class="col-md-2">
                            <%=image_tag(x.profile_picture.url, :width=>150, :height=>150)%><br>
                            <%=y.user.email%>
                          </div>
                          <div class="col-md-10">
                        <%if y.type=="Image"%>
                          <%=link_to image_tag(y.body.url, :style=>'max-width:100%;'), post_path(y), {remote: true, 'data-toggle': "modal", 'data-target': '#modal-window'}%><br><hr>
                          <%else%>
                          <h2><%=link_to y.body, post_path(y), {remote: true, 'data-toggle': "modal", 'data-target': '#modal-window'}%></h2><hr>
                          <%#=link_to x.body, post_path(x), {remote: :true, 'data-toggle': "modal", 'data-target': '#modal-window' }%>
                        <%end%>
                      </div>
                      </div>
                    </div>
                      <div class="panel-footer">
                    <i class="fa fa-comment fa-fw"></i><%=y.comments.count%>  </div>
                      </div>
                    <%end%>
                  <%end%>
                </div>
                <div class="tab-pane fade in active" id="statuses">
                  <%current_user.friends.each do |x|%>
                    <%x.statuses.each do |y|%>
                      <div class="panel panel-info">
                      <div class="panel-heading">
                        <%=y.user.email%>
                      </div>
                      <div class="panel-body">
                          <%=link_to y.body, status_path(y)%><hr>
                          <i class="fa fa-comment fa-fw"></i><%=y.comments.count%>
                      </div>
                      <div class="panel-footer">
                      <%=y.created_at%><hr>
                      </div>
                      </div>
                    <%end%>
                  <%end%>
                </div>
                <div class="tab-pane fade in active" id="images">
                  <%current_user.friends.each do |x|%>
                    <%x.images.each do |y|%>
                      <div class="panel panel-info">
                      <div class="panel-heading">
                        <%=y.user.email%>
                      </div>
                      <div class="panel-body">
                          <%=link_to image_tag(y.body.url), image_path(y)%><br>
                          <i class="fa fa-comment fa-fw"></i><%=y.comments.count%>
                      </div>
                      <div class="panel-footer">
                      <%=y.created_at%><hr>
                      </div>
                      </div>
                    <%end%>
                  <%end%>
                </div>






              </div>

          </div>
      </div>
  </div>
  </div>
  
  <div id="modal-window" class="modal fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  </div>
