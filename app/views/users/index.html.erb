<!-- <h1> All users </h1> -->

<%#if user_signed_in?%>
  <%#@usersminusself.each do |x|%>
  <%#=x.email%><%#=link_to "Add Friend", friendships_path(friend_id: x.id), method: :post%><%#=link_to "User Profile", user_profile_path(x)%><%#=link_to "Send Message", new_message_path(recipient_id: x.id)%>
  <%#end%>
<%#=link_to "My Friends", friendships_path%>

 <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                           Your Home Feed
                        </div>
                        <!-- .panel-heading -->
                        <div class="panel-body">
                          <ul class="nav nav-tabs">
                                <li class="active"><a href="#allposts" data-toggle="tab">All Posts</a>
                                </li>
                                <li><a href="#statuses" data-toggle="tab">Statuses only</a>
                                </li>
                                <li><a href="#images" data-toggle="tab">Images only</a>
                                </li>
                            </ul>
                            <div class="tab-content">
                                <div class="tab-pane fade in active" id="allposts">
                                <%current_user.friends.each do |x|%>
                                  <%x.posts.each do |y|%>
                                    <div class="panel panel-info">
                                    <div class="panel-heading">
                                      <%=y.user.email%>
                                    </div>
                                    <div class="panel-body">
                                      <%if y.type=="Image"%>
                                        <%=link_to image_tag(y.body.url), post_path(y)%><br>
                                        <%else%>
                                        <%=link_to y.body, post_path(y)%><hr>
                                        <i class="fa fa-comment fa-fw"></i><%=y.comments.count%>
                                      <%end%>
                                    </div>
                                    <div class="panel-footer">
                                    <%=y.created_at%><hr>
                                    </div>
                                    </div>
                                  <%end%>
                                <%end%>
                              </div>
                              <div class="tab-pane fade in active" id="statuses">
                                <%current_user.friends.each do |x|%>
                                  <%x.statuses.each do |y|%>
                                    <div class="panel panel-info">
                                    <div class="panel-heading">
                                      <%=y.user.email%>
                                    </div>
                                    <div class="panel-body">
                                        <%=link_to y.body, status_path(y)%><hr>
                                        <i class="fa fa-comment fa-fw"></i><%=y.comments.count%>
                                    </div>
                                    <div class="panel-footer">
                                    <%=y.created_at%><hr>
                                    </div>
                                    </div>
                                  <%end%>
                                <%end%>
                              </div>
                              <div class="tab-pane fade in active" id="images">
                                <%current_user.friends.each do |x|%>
                                  <%x.images.each do |y|%>
                                    <div class="panel panel-info">
                                    <div class="panel-heading">
                                      <%=y.user.email%>
                                    </div>
                                    <div class="panel-body">
                                        <%=link_to image_tag(y.body.url), image_path(y)%><br>
                                        <i class="fa fa-comment fa-fw"></i><%=y.comments.count%>
                                    </div>
                                    <div class="panel-footer">
                                    <%=y.created_at%><hr>
                                    </div>
                                    </div>
                                  <%end%>
                                <%end%>
                              </div>






                            </div>

                        </div>
                    </div>
                </div>
  </div>
<%#end%>
