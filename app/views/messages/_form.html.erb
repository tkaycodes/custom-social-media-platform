<%if x.user_id==current_user.id%>
                                    <li class="right clearfix">
                                    <span class="chat-img pull-right">
                                      <%=image_tag(x.user.profile_picture, size:"50", class: "img-circle")%>
                                        <!-- <img src="http://placehold.it/50/FA6F57/fff" alt="User Avatar" class="img-circle" /> -->
                                    </span>
                                    <div class="chat-body clearfix">
                                        <div class="header">
                                            <small class=" text-muted">
                                                <i class="fa fa-clock-o fa-fw"></i> <%=time_ago_in_words(x.created_at)%></small>
                                            <strong class="pull-right primary-font">
                                              <%=x.user.email%>
                                            </strong>
                                        </div>
                                        <p style="text-align:right">
                                            <!-- there is a reply table with text column called name -->
                                            <%=x.name%>
                                        </p>
                                    </div>
                                </li>
                                    <%else%>
                                    <li class="left clearfix">
                                    <span class="chat-img pull-left">
                                        <!-- <img src="http://placehold.it/50/55C1E7/fff" alt="User Avatar" class="img-circle" /> -->
                                        <%=image_tag(x.user.profile_picture, size:"50", class: "img-circle")%>
                                    </span>
                                    <div class="chat-body clearfix">
                                        <div class="header">
                                            <strong class="primary-font"><%=x.user.email%></strong>
                                            <small class="pull-right text-muted">
                                                <i class="fa fa-clock-o fa-fw"></i> <%=time_ago_in_words(x.created_at)%>
                                            </small>
                                        </div>
                                        <p> 
                                            <!-- reply 'name' -->
                                            <%=x.name%>
                                        </p>
                                    </div>
                                </li>
                                <%end%>